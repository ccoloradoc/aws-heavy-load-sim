<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body >

<header>
    <% include ../partials/header %>
</header>

<div id="overlay" class="overlay d-none">
  <img src="/css/source.gif"/>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="alert alert-success mt-3" role="alert">
        <h5 class="d-inline">IP:</h5> <%= ip %> &nbsp; <h5 class="d-inline">Instance:</h5> <%= instance %>
      </div>
      
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <table class="table striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>CPU</th>
            <th>IP</th>
            <th>Instance</th>
          </tr>
        </thead>
        <tbody class="body">
          <% Object.keys(processes).forEach(function(item, index) {  %>
              <tr>
                <td><%= item %></td>
                <td></td>
                <td><%= ip %></td>
                <td><%= instance %></td>
              </tr>
          <% }) %>
        </tbody>
      </table>  
    </div>
  </div>
  <div class="row pt-5">
    <div class="col-sm">
      <div class="alert alert-info mt-3" role="alert">
        <h4>Headers</h4>
        <table class="table striped">
          <thead>
            <tr>
              <th>Header</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody class="body">
            <% Object.keys(headers).forEach(function(name, index) {  %>
                <tr>
                  <td><%= name %></td>
                  <td><%= headers[name] %></td>
                </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>